    "@types/chance": "^1.1.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.17.9",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-transition-group": "^4.4.2",
    "@types/uuid": "^8.3.1",
    "@xstate/react": "^1.3.4",
    "@xstate/test": "^0.4.2",
    "chance": "^1.1.7",
    "chromatic": "^5.9.2",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.23.0",
    "express": "^4.17.1",
    "formik": "^2.2.9",
    "fp-ts": "^2.11.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.1",
    "i18next": "^20.4.0",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.3.0",
    "jest-playwright-preset": "^1.5.2",
    "lint-staged": "^11.1.2",
    "msw": "^0.34.0",
    "playwright": "^1.14.0",
    "playwright-testing-library": "^3.0.0",
    "prettier": "^2.3.2",
    "rc-select": "^12.1.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-helmet-async": "^1.0.9",
    "react-i18next": "^11.11.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-transition-group": "^4.4.2",
    "rxjs": "^7.3.0",
    "sass": "^1.37.5",
    "source-map-explorer": "^2.5.2",
    "start-server-and-test": "^1.13.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5",
    "utility-types": "^3.10.0",
    "uuid": "^8.3.2",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.4",
    "workbox-broadcast-update": "^5.1.4",
    "workbox-cacheable-response": "^5.1.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-google-analytics": "^5.1.4",
    "workbox-navigation-preload": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4",
    "workbox-streams": "^5.1.4",
    "xstate": "^4.19.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:silent": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "build:serve": "node serve-build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "e2e": "playwright test --config=e2e/playwright.config.ts",
    "e2e-old": "cd e2e && jest",
    "e2e-old:ci": "start-server-and-test build:serve http://localhost:3000/web-showcase e2e",
    "e2e-old:local": "cross-env BROWSER=chromium REACT_APP_E2E=true start-server-and-test start:silent http://localhost:3000/web-showcase e2e",
    "e2e-old:local:debug": "cross-env PWDEBUG=1 npm run e2e:local",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint",
    "lint:eslint": "eslint --fix src/**/*.{ts,tsx}",
    "lint:prettier": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "lint:stylelint": "stylelint --fix src/**/*.{css,scss}",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "chromatic --skip 'dependabot/**'",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "jest/consistent-test-it": [
        "error",
        {
          "fn": "test"
        }
      ],
      "jest/prefer-called-with": "warn",
      "jest/expect-expect": "off",
      "jsx-a11y/no-onchange": "off",
      "jsx-a11y/html-has-lang": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "e2e/**/*"
        ],
        "rules": {
          "testing-library/no-await-sync-query": "off",
          "jest/no-done-callback": "off",
          "jest/no-standalone-expect": "off",
          "jest/no-identical-title": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/mocks/**",
      "!src/**/test/**",
      "!src/**/stories/**",
      "!src/**/*.stories.*",
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/service-worker.ts",
      "!src/serviceWorkerRegistration.ts",
      "!src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
